<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Side Navigation Bar</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
    }

    .sidenav {
      height: 100%;
      width: 250px;
      position: fixed;
      top: 0;
      left: -250px;
      background-color: #543006ef;
      padding-top: 60px;
      transition: 0.5s;
    }

    .sidenav a {
      padding: 10px 15px;
      text-decoration: none;
      font-size: 18px;
      color: #fff;
      display: block;
      transition: 0.3s;
    }

    .sidenav a:hover {
      background-color: #a28461ef;
    }

    .logo-image {
      display: block;
      width: 200px;
      height: auto;
      border-radius: 5px;
      margin: 0 auto;
      margin-top: 20px;
    }

    .menu-icon {
      font-size: 24px;
      cursor: pointer;
      position: fixed;
      top: 20px;
      left: 20px;
      padding-left: 5px;
      padding-right: 5px;
      background-color: #543006ef;
      color: #fff;
      z-index: 2;
    }

    /* Media query for screens smaller than 768px */
    @media screen and (max-width: 768px) {
      .sidenav {
        width: 200px;
      }
      .content {
        margin-left: 0;
      }
      
    }
  </style>
</head>
<body>

  <div class="sidenav" id="sidenav">
    <% if (user) { %>
      <a href="/views/home" class="active"><i class="fa fa-home" style="padding-right: 10px;"></i>Home (<%= `${user.first_name}` %>)</a>
      <a href="/views/create-mine" class="active"><i class="fa fa-calendar-check-o" style="font-size:18px; padding-right: 10px;"></i>Create Mine</a>
      <a href="/views/create-other" class="active"><i class="fa fa-calendar-check-o" style="font-size:18px; padding-right: 10px;"></i>Create Others</a>
      <a href="/views/my-anniversaries"><i class="fa fa-calendar" style="font-size:18px; padding-right: 10px;"></i>My Anniversaries</a>
      <a href="/views/other-anniversaries"><i class="fa fa-calendar" style="font-size:18px; padding-right: 10px;"></i>Other Anniversaries</a>
      <a href="/views/logout"><i class="fa fa-sign-out" aria-hidden="true" style="padding-right: 10px;"></i>Logout</a>
      
      <a href="mailto:sen4word@gmail.com" target="_blank"><i class="fa fa-envelope" style="font-size: large; padding-right: 10px;"></i></i>Contact Us</a>

      <br><br><br><br><br>
      <img src="/views/assets/wisher-logo.PNG" alt="Wisher Logo" class="logo-image">


      
    <% } else{ %>
      <a href="/views/welcome" class="active"><i class="fa fa-home" style="padding-right: 10px;"></i>Home</a>
      <a href="/views/login"><i class="fa fa-sign-in" aria-hidden="true" style="padding-right: 10px;"></i>Login</a>
      <a href="/views/signup"><i class="fa fa-fw fa-user" style="padding-right: 5px;"></i>Signup</a>
      
      <a href="mailto:sen4word@gmail.com" target="_blank"><i class="fa fa-envelope" style="font-size: large; padding-right: 10px;"></i></i>Contact Us</a>
      
      <br><br><br><br><br>
      <img src="/views/assets/wisher-logo.PNG" alt="Wisher Logo" class="logo-image">

    <% } %>
  <span class="menu-icon" onclick="toggleNav()" style="font-size: 32px; font-weight: bold;">&#9776;</span>
  </div>

  <img src="/views/assets/wisher-logo.PNG" alt="Wisher Logo" class="logo-image">

  <script>
    // function toggleNav() {
    //   var sidenav = document.getElementById("sidenav");
    //   if (sidenav.style.left === "-250px") {
    //     sidenav.style.left = "0";
    //   } else {
    //     sidenav.style.left = "-250px";
    //   }
    // }

    function toggleNav() {
      var sidenav = document.getElementById("sidenav");
      if (sidenav.style.left === "-250px") {
        sidenav.style.left = "0";
      } else {
        sidenav.style.left = "-250px";
      }
    }

    // Close the sidebar if the user clicks anywhere outside the sidebar
    window.onclick = function(event) {
      var sidenav = document.getElementById("sidenav");
      if (event.target !== sidenav && event.target.className !== "menu-icon") {
        sidenav.style.left = "-250px";
      }
    };
  </script>

</body>
</html>
